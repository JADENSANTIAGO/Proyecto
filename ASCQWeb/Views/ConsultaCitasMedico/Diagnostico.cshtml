@model CQASEntidades.Negocio.CqasHistoriaClinica

@{
    ViewData["Title"] = "Create";
}

<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2><strong>Diagnóstico</strong></h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->

                        <div class="widget-body no-padding">

                            <form asp-action="Diagnostico" id="checkout-form" class="smart-form">
                                <input type="hidden" asp-for="CodigoCita" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Diagnostico:</label>
                                            <textarea asp-for="Descripcion" class="form-control" required="required">
</textarea>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Receta:</label>
                                            <textarea asp-for="Reseta" class="form-control" required="required">
</textarea>
                                        </section>

                                    </div>

                                </fieldset>

                                <footer>
                                    <input type="submit" value="Actualizar" class="btn btn-primary btn-sm" />
                                    <a asp-action="Index" class="btn btn-warning btn-sm">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {

}
