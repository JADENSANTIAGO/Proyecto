@model CQASEntidades.Negocio.CqasMenu
@{
    ViewData["Title"] = "Edit";
}
<div id="content">
    <p></p><!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2><strong>Editar Menú</strong></h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Codigo" />
                                <input type="hidden" asp-for="Estado" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label>Seleccionar Cabezera:</label>
                                            <select id="Dia" asp-for="Cabezera" asp- class="form-control">
                                                <option value="Administracion" selected="selected">Administracion</option>
                                                <option value="Medico">Medico</option>
                                                <option value="Paciente">Paciente</option>
                                                <option value="Reportes">Reportes</option>
                                                <option value="Seguridad">Seguridad</option>
                                            </select>
                                        </section>
                                        <section class="col col-6">
                                            <label>Nombre del Submenú:</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-list"></i>
                                                <input type="text" asp-for="Descripcion" class="form-control" />
                                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Nombre del Url:</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-list"></i>
                                                <input type="text" asp-for="Url" class="form-control" />
                                                <span asp-validation-for="Url" class="text-danger"></span>
                                            </label>
                                        </section>

                                    </div>
                                </fieldset>

                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                                    <a asp-action="Index" class="btn btn-warning btn-sm">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->
</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript"></script>
}